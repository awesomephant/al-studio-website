<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">

{% if class == "home" %}
<title>{{settings.meta_title}}</title>
{% else %}
<title>{{settings.site_title}}{% if title %} / {{title}}{% endif %}</title>
{% endif %}

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

<meta name="description" content="{{settings.meta_description}}">

{% if featured_image.landscape %}
<meta property="og:image" content="https://adalbertolonardi.com/{{featured_image.landscape}}?nf_resize=fit&w=1200">
{% else %}
<meta property="og:image" content="https://adalbertolonardi.com/{{settings.social_image}}?nf_resize=fit&w=1200">
{% endif %}

{% if class == "home" %}
<meta property="og:title" content="{{settings.meta_title}}{% if title %} / {{title}}{% endif %}">
<meta property="og:description" content="{{settings.meta_description}}">
{% else %}
<meta property="og:title" content="{{settings.site_title}}{% if title %} / {{title}}{% endif %}">
<meta property="og:description" content="{{settings.meta_description}}">
{% endif %}


<meta property="og:url" content="https://www.adalbertolonardi.com/">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@adalbertolonard">
<meta name="twitter:creator" content="@adalbertolonard">

{% if class == "home" %}
<meta name="twitter:title" content="{{settings.meta_title}}{% if title %} / {{title}}{% endif %}">
<meta name="twitter:description" content="{{settings.meta_description}}">
{% else %}
<meta name="twitter:title" content="{{settings.site_title}}{% if title %} / {{title}}{% endif %}">
<meta name="twitter:description" content="{{settings.meta_description}}">
{% endif %}

{% if featured_image.landscape %}
<meta name="twitter:image" content="https://adalbertolonardi.com/{{featured_image.landscape}}?nf_resize=fit&w=1200">
{% else %}
<meta name="twitter:image" content="https://adalbertolonardi.com/{{settings.social_image}}?nf_resize=fit&w=1200">
{% endif %}
