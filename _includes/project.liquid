---
layout: base
class: single-project
---

<article class="project">
    <div class='project--hero'>
            <img loading="lazy" src="{{featured_image.landscape}}?nf_resize=fit&w=1400"/>
    </div>
    <header class="project--header">
        <h2 class="project--title">{{title}}</h2>
        <span class="project--years">
            {% if start_year == end_year %}
                {{end_year}}
            {% else %}
                {{start_year}}â€”{{end_year}}
            {% endif %}
        </span>
        {% if tags %}
        <span class="project--tags">
            {{tags | join: ", "}}
        </span>
        {% endif %}
    </header>
    <main class="project--body">
        {{content}}
    </main>
    {% if related_projects %}
    <section class="project--related">
        {% if related_projects.size > 1%}
        <h3 class="section-title">Related Projects</h3>
        {% else %}
        <h3 class="section-title">Related Project</h3>
        {% endif %}
        <ul>
            {% for p in related_projects %}
            {% for pr in collections.project %}
            {% if p == pr.data.title %}
            {% include project_card with {p: pr}%}
            {% endif %}
            {% endfor %}
            {% endfor %}
        </ul>
    </section>
    {% endif %}
</article>