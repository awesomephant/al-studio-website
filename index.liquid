---
layout: base
class: home
---

<section class="home-projects" data-slide="0" style="--slideCount: {{settings.featured_projects | size}}">
    <div class="home-slides">
        {% for fp in settings.featured_projects %}
        {% assign index = forloop.index %}
        {% for p in collections.project %}
        {% if fp == p.data.title %}
        <figure class="home-project slide" data-light="{{p.data.featured_image.light_image}}">
            <div class="hero-image">
                {% if p.data.featured_image %}
                {% if p.data.featured_image.alt %}
                {% assign alt = p.data.featured_image.alt %}
                {% else %}
                {% assign alt = p.data.title %}
                {% endif %}
                <div style="background-image: url('{{p.data.featured_image.landscape }}?nf_resize=fit&w=2000')"
                    class='media-item-media landscape'>
                    {{alt | replace: '"', "'"}}
                </div>
                <div style="background-image: url('{{p.data.featured_image.portrait }}?nf_resize=fit&w=1200')"
                    class='media-item-media portrait'>
                    {{alt | replace: '"', "'"}}
                </div>
                {% else %}
                <div style="background-image: url('{{p.data.media[0].url }}?nf_resize=fit&w=1600')"
                    class='media-item-media landscape'>
                    {{alt | replace: '"', "'"}}
                </div>
                {% endif %}
            </div>
        </figure>
        {% endif %}
        {% endfor %}
        {% endfor %}
    </div>
    {% for fp in settings.featured_projects %}
    {% assign index = forloop.index %}
    {% for p in collections.project %}
    {% if fp == p.data.title %}
    <aside class="home-caption">
        <h2>
            {% if settings.show_archive == true %}
            <a class="title" href="{{p.url}}">
                {{p.data.title}}
                <span class='description'>
                    {{p.data.subtitle}}
                </span>
            </a>
            {% else %}
            <span class="title">
                {{p.data.title}}
            </span>
            {% endif %}
        </h2>
        <span class="home-project--index">
            {{index}}/{{settings.featured_projects | size}}
        </span>
    </aside>
    {% endif %}
    {% endfor %}
    {% endfor %}
</section>